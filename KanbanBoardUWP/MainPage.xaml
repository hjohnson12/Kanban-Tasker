            <!--  COLUMN : To Study  -->
            <!--
            <syncfusion:KanbanColumn
                Title="To Study"
                MinWidth="260"
                Categories="Study"
                MaximumLimit="10"
                MinimumLimit="1">
                <syncfusion:KanbanColumn.ErrorBarSettings>
                    <syncfusion:ErrorBarSettings
                        MaxValidationColor="Red"
                        MinValidationColor="Green"
                        Color="Gray" />
                </syncfusion:KanbanColumn.ErrorBarSettings>
            </syncfusion:KanbanColumn>

            -->
            <!--  COLUMN : In Progress  -->
            <!--
            <syncfusion:KanbanColumn
                Title="In Progress"
                MinWidth="260"
                Categories="In Progress"
                MaximumLimit="10"
                MinimumLimit="1">
                <syncfusion:KanbanColumn.ErrorBarSettings>
                    <syncfusion:ErrorBarSettings
                        MaxValidationColor="Red"
                        MinValidationColor="Green"
                        Color="Gray" />
                </syncfusion:KanbanColumn.ErrorBarSettings>
            </syncfusion:KanbanColumn>

            -->
            <!--  COLUMN : Done  -->
            <!--
            <syncfusion:KanbanColumn
                Title="Done"
                MinWidth="260"
                Categories="Review,Done"
                MaximumLimit="10"
                MinimumLimit="1">
                <syncfusion:KanbanColumn.ErrorBarSettings>
                    <syncfusion:ErrorBarSettings
                        MaxValidationColor="Red"
                        MinValidationColor="Green"
                        Color="Gray" />
                </syncfusion:KanbanColumn.ErrorBarSettings>
            </syncfusion:KanbanColumn>-->
        </syncfusion:SfKanban>
    </Grid>
</Page>
