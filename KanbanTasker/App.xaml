<Application
    x:Class="KanbanTasker.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KanbanTasker"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\ThemeDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Added to override content dialog overlay background to transparent -->
            <SolidColorBrush x:Key="SystemControlPageBackgroundMediumAltMediumBrush" Color="#00000000" />
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
